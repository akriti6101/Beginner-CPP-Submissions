/*Write a program to check whether a number is negative, zero, positive?*/
#include<iostream>
using namespace std;
int main()

{
	int c;
	cout<<"Enter the number:"<<endl;
	cin>>c;
	if(c>0)
	 cout<<"Positive"<<endl;
	 else if(c==0)
	   cout<<"Zero"<<endl;
	   else
	     cout<<"Negative"<<endl;
	     return 0;
}
